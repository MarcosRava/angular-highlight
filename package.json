{
  "name": "angular-highlight",
  "version": "0.0.2",
  "description": "A directive to use highlight.js in angularjs",
  "scripts": {
    "build": "webpack",
    "postinstall": "npm run check-dependencies",
    "check-dependencies": "nsp check",
    "lint": "eslint './'",
    "climate-coverage": "npm run test && codeclimate-test-reporter < coverage/lcov.info",
    "test": "cross-env NODE_ENV=test npm run lint && karma start"
  },
  "author": "Marcos Rava <marcos.rava@flytour.com.br>",
  "main": "build/bundle.js",
  "keywords": [
    "highlightcode",
    "highlight",
    "highlightjs",
    "highlight.js",
    "angular",
    "angularjs",
    "directive"
  ],
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run lint"
      ],
      "post-commit": [
        "git status"
      ],
      "pre-push": [
        "npm test"
      ]
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/travelhubapi/angular-highlight"
  },
  "devDependencies": {
    "angular": "^1.5.8",
    "angular-mocks": "^1.5.8",
    "babel-core": "^6.4.0",
    "babel-eslint": "^4.1.6",
    "babel-istanbul": "^0.6.0",
    "babel-istanbul-loader": "0.0.1",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.3.13",
    "codeclimate-test-reporter": "^0.3.3",
    "cross-env": "^2.0.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.3",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "loader-utils": "^0.2.12",
    "nsp": "^2.6.1",
    "pre-git": "^3.10.0",
    "rimraf": "^2.5.0",
    "webpack": "^1.12.11"
  },
  "dependencies": {
    "highlight.js": "^9.7.0"
  }
}
