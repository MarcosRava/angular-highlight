{
  "name": "angular-highlight",
  "version": "0.0.1",
  "description": "A directive to use highlight.js in angularjs",
  "scripts": {
    "build": "webpack",
    "postinstall": "npm run check-dependencies",
    "check-dependencies": "nsp check",
    "lint": "eslint src test",
    "test": "cross-env NODE_ENV=test npm run lint && karma start"
  },
  "author": "Marcos Rava <marcos.rava@flytour.com.br>",
  "main": "build/bundle.js",
  "keywords": [
    "highlightcode",
    "highlight",
    "highlightjs",
    "highlight.js",
    "angular",
    "angularjs",
    "directive"
  ],
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run lint"
      ],
      "post-commit": [
        "git status"
      ],
      "pre-push": [
        "npm test"
      ]
    }
  },
  "license": "MIT",
  "devDependencies": {
    "angular": "^1.5.8",
    "angular-mocks": "^1.5.8",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^5.3.3",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-preset-es2015": "^6.14.0",
    "coveralls": "^2.11.14",
    "cross-env": "^2.0.1",
    "eslint": "^3.5.0",
    "jasmine": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "nsp": "^2.6.1",
    "pre-git": "^3.10.0",
    "webpack": "^1.12.2"
  },
  "dependencies": {
    "highlight.js": "^9.7.0"
  }
}
